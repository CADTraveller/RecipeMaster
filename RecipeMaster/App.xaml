<common:BootStrapper x:Class="RecipeMaster.App"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xamlTK="using:WinRTXamlToolkit.Converters"

	xmlns:common="using:Template10.Common">


	<Application.Resources xmlns:xaml="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Styles\Custom.xaml" />
				<ResourceDictionary Source="Styles\Buttons.xaml" />
				<ResourceDictionary Source="Styles\TextBlock.xaml" />
				<ResourceDictionary Source="Styles\TextBox.xaml" />
		<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
			</ResourceDictionary.MergedDictionaries>

			<!--  custom resources  -->
			<xamlTK:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
		</ResourceDictionary>
	</xaml:Application.Resources>

</common:BootStrapper>