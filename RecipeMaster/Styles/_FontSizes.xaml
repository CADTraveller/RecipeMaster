<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeMaster.Styles">

	<Style x:Key="LargeFontSize" TargetType="ContentControl">
		<Setter Property="Control.FontSize" Value="16pt" />
	</Style>

	<Style x:Key="MediumFontSize" TargetType="ContentControl">
		<Setter Property="Control.FontSize" Value="14pt" />
	</Style>
</ResourceDictionary>